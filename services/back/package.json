{
    "name": "zkorum-back",
    "version": "1.0.0",
    "description": "ZKorum backend",
    "main": "index.js",
    "scripts": {
        "build": "tsc -p tsconfig.json",
        "start": "node dist/index.js",
        "start:dev": "tsx watch src/index.ts",
        "db:drop": "drizzle-kit drop",
        "db:generate": "drizzle-kit generate:pg && ./scripts/rename_sql_migration_file.sh drizzle/",
        "db:migrate": "docker run --rm --network host -v ${PWD}:/flyway/conf -v ${PWD}/drizzle:/flyway/sql flyway/flyway migrate",
        "db:clean": "docker run --rm --network host -v ${PWD}:/flyway/conf -v ${PWD}/drizzle:/flyway/sql flyway/flyway clean",
        "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "format:check": "prettier . --check",
        "format:write": "prettier . --write"
    },
    "type": "module",
    "keywords": [
        "trust-minimized infrastructure",
        "privacy",
        "transparency",
        "freedom",
        "equity",
        "democracy",
        "poll",
        "survey",
        "vote"
    ],
    "author": "Nicolas Gimenez",
    "license": "AGPL3",
    "dependencies": {
        "@docknetwork/crypto-wasm-ts": "^0.40.0",
        "@fastify/auth": "^4.3.0",
        "@fastify/cors": "^8.3.0",
        "@fastify/sensible": "^5.2.0",
        "@fastify/swagger": "^8.8.0",
        "@ucans/ucans": "^0.11.4",
        "dotenv": "^16.3.1",
        "drizzle-orm": "^0.27.2",
        "fastify": "^4.19.2",
        "fastify-type-provider-zod": "^1.1.9",
        "keystore-idb": "^0.15.5",
        "localforage": "^1.10.0",
        "postgres": "^3.3.5",
        "tweetnacl": "^1.0.3",
        "uint8arrays": "^4.0.4",
        "zod": "^3.21.4"
    },
    "devDependencies": {
        "@openapitools/openapi-generator-cli": "^2.7.0",
        "@types/node": "^20.4.2",
        "@typescript-eslint/eslint-plugin": "^6.5.0",
        "@typescript-eslint/parser": "^6.5.0",
        "drizzle-kit": "^0.19.12",
        "eslint": "^8.48.0",
        "eslint-config-prettier": "^9.0.0",
        "pino-pretty": "^10.0.1",
        "prettier": "^3.0.3",
        "tsx": "^3.12.7",
        "typescript": "^5.1.6"
    }
}
