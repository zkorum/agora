{
    "include": ["src/**/*"],
    "exclude": ["**/*.spec.ts", "node_modules", "**/node_modules/*"],
    "compilerOptions": {
        "target": "ES2022",
        "lib": ["ES2023"],
        "module": "node16",
        "moduleResolution": "Node16",
        "baseUrl": "src",
        "paths": {
            "@/*": ["*"]
        },
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "outDir": "dist",
        "declaration": true,
        "sourceMap": true
    }
}
