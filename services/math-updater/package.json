{
    "name": "@zkorum/agora-math-updater",
    "version": "1.0.0",
    "description": "Background worker for updating Polis math calculations",
    "type": "module",
    "scripts": {
        "build": "NODE_ENV=production rm -rf dist && tsc --sourceMap -p tsconfig.json",
        "start": "node --loader esm-module-alias/loader --no-warnings dist/index.js",
        "start:dev": "tsx watch --trace-uncaught src/index.ts",
        "lint": "eslint .",
        "format:write": "prettier --write \"**/*.{js,ts,jsx,tsx,json}\"",
        "format:check": "prettier . --check",
        "image:buildx": "docker buildx build --platform linux/amd64 -t agora-math-updater --load .",
        "image:build": "docker build -t agora-math-updater ."
    },
    "keywords": [
        "worker",
        "background-job",
        "polis",
        "math"
    ],
    "author": "ZKorum SAS <hello@zkorum.com>",
    "license": "AGPL-3.0",
    "aliases": {
        "@": "./dist"
    },
    "dependencies": {
        "@aws-sdk/client-bedrock-runtime": "^3.990.0",
        "@aws-sdk/client-secrets-manager": "^3.990.0",
        "@google-cloud/translate": "^9.3.0",
        "@valkey/valkey-glide": "^2.2.7",
        "axios": "^1.13.5",
        "dotenv": "^16.5.0",
        "drizzle-orm": "^0.45.1",
        "extract-first-json": "^2.0.2",
        "libphonenumber-js": "^1.12.36",
        "p-limit": "^7.3.0",
        "parse-json-object": "^3.0.1",
        "pg-boss": "^11.1.1",
        "pino": "^9.6.0",
        "pino-pretty": "^13.1.3",
        "postgres": "^3.4.8",
        "sanitize-html": "^2.17.0",
        "uint8arrays": "^5.1.0",
        "zod": "^4.3.6"
    },
    "devDependencies": {
        "@eslint/js": "^9.27.0",
        "@types/eslint__js": "^8.42.3",
        "@types/node": "^20.17.47",
        "@types/sanitize-html": "^2.16.0",
        "eslint": "^9.27.0",
        "eslint-config-prettier": "^9.1.0",
        "esm-module-alias": "^2.2.1",
        "fastify": "^5.7.4",
        "globals": "^15.15.0",
        "prettier": "^3.8.1",
        "tsx": "^4.21.0",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.55.0"
    }
}
