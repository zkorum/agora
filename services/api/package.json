{
  "name": "@zkorum/agora-api",
  "version": "1.0.0",
  "description": "API for Agora Citizen Network",
  "exports": "./index.js",
  "scripts": {
    "build": "NODE_ENV=production rm -rf dist && tsc --sourceMap -p tsconfig.json",
    "start": "node --loader esm-module-alias/loader --no-warnings dist/index.js",
    "start:dev": "tsx watch src/index.ts",
    "start:import": "tsx src/index.ts",
    "start:dev:capacitor": "MODE=capacitor tsx watch src/index.ts",
    "db:drop": "drizzle-kit drop",
    "db:generate": "drizzle-kit generate && ./scripts/rename_sql_migration_file.sh drizzle/",
    "db:migrate": "docker run --rm --network host -v ${PWD}/database/flyway:/flyway/conf -v ${PWD}/database/flyway:/flyway/sql flyway/flyway migrate",
    "db:undo": "docker run --rm --network host -v ${PWD}/database/flyway:/flyway/conf -v ${PWD}/database/flyway:/flyway/sql flyway/flyway undo",
    "db:sudo:migrate": "sudo docker run --rm --network host -v ${PWD}/database/flyway:/flyway/conf -v ${PWD}/database/flyway:/flyway/sql flyway/flyway  migrate",
    "db:clean": " docker run --rm --network host -v ${PWD}/database/flyway:/flyway/conf -v ${PWD}/database/flyway:/flyway/sql flyway/flyway clean",
    "lint": "eslint .",
    "generate-dev-keys": "NODE_OPTIONS=--experimental-vm-modules GENERATE_DEV_KEYS=true jest -t 'generate-dev-keys'",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "image:build": "docker build -t agora-api .",
    "format:check": "prettier . --check",
    "format:write": "prettier . --write"
  },
  "type": "module",
  "engines": {
    "node": ">=16"
  },
  "keywords": [
    "trust-minimized infrastructure",
    "privacy",
    "transparency",
    "freedom",
    "equity",
    "democracy",
    "poll",
    "survey",
    "vote"
  ],
  "author": "ZKorum SAS <hello@zkorum.com>",
  "license": "AGPL-3.0",
  "aliases": {
    "@": "./dist"
  },
  "dependencies": {
    "@aws-sdk/client-secrets-manager": "^3.750.0",
    "@aws-sdk/client-ses": "^3.465.0",
    "@docknetwork/crypto-wasm-ts": "^0.40.0",
    "@fastify/auth": "^5.0.1",
    "@fastify/cors": "^10.0.1",
    "@fastify/sensible": "^6.0.1",
    "@fastify/swagger": "^9.2.0",
    "@ucans/ucans": "^0.12.0",
    "axios": "^1.7.9",
    "cborg": "^4.0.5",
    "csv-parse": "^5.6.0",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.39.1",
    "fastify": "^5.0.0",
    "fastify-type-provider-zod": "^4.0.2",
    "keystore-idb": "^0.15.5",
    "libphonenumber-js": "^1.11.14",
    "linkify-html": "^4.2.0",
    "linkifyjs": "^4.2.0",
    "localforage": "^1.10.0",
    "lodash": "^4.17.21",
    "multiformats": "^12.1.3",
    "nodemailer": "^6.9.7",
    "nostr-tools": "^2.10.4",
    "pg": "^8.13.1",
    "postgres": "^3.3.5",
    "sanitize-html": "^2.13.1",
    "tweetnacl": "^1.0.3",
    "twilio": "^5.4.4",
    "uint8arrays": "^4.0.6",
    "ws": "^8.18.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@jest/globals": "^29.7.0",
    "@openapitools/openapi-generator-cli": "^2.15.3",
    "@types/eslint__js": "^8.42.3",
    "@types/lodash": "^4.14.200",
    "@types/node": "^20.8.0",
    "@types/nodemailer": "^6.4.14",
    "@types/pg": "^8.11.10",
    "@types/sanitize-html": "^2.13.0",
    "@types/ws": "^8.5.13",
    "drizzle-kit": "^0.30.4",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "esm-module-alias": "^2.1.0",
    "globals": "^15.11.0",
    "jest": "^29.7.0",
    "pino-pretty": "^10.2.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^3.14.0",
    "typescript": "^5.2.2",
    "typescript-eslint": "^8.12.1"
  }
}
