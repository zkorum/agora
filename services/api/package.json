{
    "name": "@zkorum/agora-api",
    "version": "1.0.0",
    "description": "API for Agora Citizen Network",
    "exports": "./index.js",
    "scripts": {
        "build": "NODE_ENV=production rm -rf dist && tsc --sourceMap -p tsconfig.json",
        "start": "node --loader esm-module-alias/loader --no-warnings dist/index.js",
        "start:dev": "tsx watch --trace-uncaught src/index.ts",
        "start:import": "tsx src/index.ts",
        "start:dev:capacitor": "MODE=capacitor tsx watch src/index.ts",
        "db:drop": "drizzle-kit drop",
        "db:generate": "drizzle-kit generate && ./scripts/rename_sql_migration_file.sh drizzle/",
        "db:migrate": "docker run --rm --network host -v ${PWD}/database/flyway:/flyway/conf -v ${PWD}/database/flyway:/flyway/sql flyway/flyway migrate",
        "db:undo": "docker run --rm --network host -v ${PWD}/database/flyway:/flyway/conf -v ${PWD}/database/flyway:/flyway/sql flyway/flyway undo",
        "db:sudo:migrate": "sudo docker run --rm --network host -v ${PWD}/database/flyway:/flyway/conf -v ${PWD}/database/flyway:/flyway/sql flyway/flyway  migrate",
        "db:clean": " docker run --rm --network host -v ${PWD}/database/flyway:/flyway/conf -v ${PWD}/database/flyway:/flyway/sql flyway/flyway clean",
        "lint": "eslint  .",
        "format:write": "prettier --write \"**/*.{js,ts,jsx,tsx,vue,scss,html,md,json}\"",
        "format:check": "prettier . --check",
        "generate-dev-keys": "NODE_OPTIONS=--experimental-vm-modules GENERATE_DEV_KEYS=true jest -t 'generate-dev-keys'",
        "test": "vitest",
        "image:buildx": "docker buildx build --platform linux/amd64 -t agora-api --load .",
        "image:build": "docker build -t agora-api ."
    },
    "type": "module",
    "engines": {
        "node": ">=16"
    },
    "keywords": [
        "trust-minimized infrastructure",
        "privacy",
        "transparency",
        "democracy",
        "poll",
        "survey",
        "vote"
    ],
    "author": "ZKorum SAS <hello@zkorum.com>",
    "license": "AGPL-3.0",
    "aliases": {
        "@": "./dist"
    },
    "dependencies": {
        "@aws-sdk/client-bedrock-runtime": "^3.812.0",
        "@aws-sdk/client-secrets-manager": "^3.812.0",
        "@aws-sdk/client-ses": "^3.812.0",
        "@fastify/auth": "^5.0.2",
        "@fastify/cors": "^10.1.0",
        "@fastify/sensible": "^6.0.3",
        "@fastify/swagger": "^9.5.1",
        "@ucans/ucans": "^0.12.0",
        "axios": "^1.9.0",
        "cborg": "^4.2.10",
        "csv-parse": "^5.6.0",
        "dotenv": "^16.5.0",
        "drizzle-orm": "^0.39.3",
        "extract-first-json": "^2.0.2",
        "fastify": "^5.3.3",
        "fastify-type-provider-zod": "^4.0.2",
        "keystore-idb": "^0.15.5",
        "libphonenumber-js": "^1.12.8",
        "linkify-html": "^4.3.1",
        "linkifyjs": "^4.3.1",
        "localforage": "^1.10.0",
        "lodash": "^4.17.21",
        "multiformats": "^12.1.3",
        "nodemailer": "^6.10.1",
        "nostr-tools": "^2.13.0",
        "parse-json-object": "^3.0.1",
        "pg": "^8.16.0",
        "postgres": "^3.4.5",
        "sanitize-html": "^2.17.0",
        "tweetnacl": "^1.0.3",
        "twilio": "^5.6.1",
        "uint8arrays": "^4.0.10",
        "ws": "^8.18.2",
        "zod": "^3.24.4"
    },
    "devDependencies": {
        "@eslint/js": "^9.27.0",
        "@eslint/json": "^0.11.0",
        "@eslint/markdown": "^6.4.0",
        "@openapitools/openapi-generator-cli": "^2.20.0",
        "@types/eslint__js": "^8.42.3",
        "@types/lodash": "^4.17.16",
        "@types/node": "^20.17.47",
        "@types/nodemailer": "^6.4.17",
        "@types/pg": "^8.15.2",
        "@types/sanitize-html": "^2.16.0",
        "@types/ws": "^8.18.1",
        "drizzle-kit": "^0.30.6",
        "eslint": "^9.27.0",
        "eslint-config-prettier": "^9.1.0",
        "esm-module-alias": "^2.2.1",
        "globals": "^15.15.0",
        "pino-pretty": "^10.3.1",
        "prettier": "^3.5.3",
        "tsconfig-paths": "^4.2.0",
        "tsx": "^4.19.4",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.32.1",
        "vite": "^6.3.5",
        "vite-tsconfig-paths": "^5.1.4",
        "vitest": "^3.1.3"
    }
}
